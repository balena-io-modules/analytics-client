{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "dist",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "keyofStringsOnly": true
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "test/**/*.ts",
    "typings/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
